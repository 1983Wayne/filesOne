;;; ( SIMPLY SCHEME EXERCISE 14.8 ) Make a procedure that repeats words in a sentence argument 
;;; n amount of times if a number appears before it.

(define (expand-helper n wd)
  (if (equal? n 1) '()
      (se wd (expand-helper (- n 1) wd))))
  
(define (expand sent)
  (cond ((empty? sent) '())
        ((number? (first sent)) (se (expand-helper (first sent) (first (bf sent))) (expand (bf sent))))
        (else (se (first sent) (expand (bf sent))))))
